{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off", // 不允许打印console.log
        "vue/multi-word-component-names": "off",
        "no-unused-vars": "off", // 不允许有未使用的变量
        "vue/no-unused-vars": "off",
        "semi": "off"
    }
}
